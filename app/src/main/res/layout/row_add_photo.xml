<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/add_item_photo_image_view"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_item_title_text_view"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@color/grey"
        android:paddingTop="8dp"
        android:text="@string/description"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/add_item_photo_image_view"
        app:layout_constraintEnd_toEndOf="@+id/add_item_photo_image_view"
        app:layout_constraintStart_toStartOf="@+id/add_item_photo_image_view" />

    <ImageView
        android:id="@+id/add_item_delete_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@android:color/white"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>